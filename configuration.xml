<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>Fitxer de configuracio del servidor de correu</comment>
    <entry key="env">Testnet3</entry>
    <entry key="depth">0</entry>
    <!--Consulta les txs de la addrAlice-->
    <!--<entry key="keys_api">txs,hash,outputs,script,block_height</entry>
    <entry key="api_addr">http://api.blockcypher.com/v1/btc/test3/addrs/</entry>
    <entry key="api_addr_sufix">/full</entry>-->
    <entry key="keys_api">,txid,vout,scriptpubkey,block_height</entry>
    <entry key="api_addr">https://blockstream.info/testnet/api/address/</entry>
    <entry key="api_addr_sufix">/txs</entry>
    <!--Conslutla el darrer bloc de la xarxa blockchain-->
    <entry key="api_currentBlock">https://testnet.blockchain.info/latestblock</entry>
    <entry key="line_break">true</entry>

    <!-- Fa referencia al servidor SMTP -->
    <entry key="usuari">redwax@oneselnord.com</entry>
    <!--<entry key="port">465</entry>-->
    <entry key="port">587</entry>
    <entry key="contrasenya">xxxxx</entry>
    <entry key="protocol">smtp</entry>
    <entry key="servidor">ssl0.ovh.net</entry>

    <!-- Fa referencia al servidor IMAPS o POP3S -->
    <entry key="imap.usuari">redwax@oneselnord.com</entry>
    <entry key="imap.contrasenya">xxxxx</entry>
    <!-- El protocol pot ser imaps o pop3s -->
    <entry key="imap.protocol">imaps</entry>
    <entry key="imap.servidor">ssl0.ovh.net</entry>

    <entry key="imap.port">993</entry>
    <entry key="imap.folder">Inbox</entry>
    <entry key="imap.length">10</entry>
</properties>
